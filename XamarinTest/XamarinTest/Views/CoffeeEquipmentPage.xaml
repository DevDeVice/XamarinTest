    <ListView 
        SelectedItem="{Binding SelectedCoffee, Mode=TwoWay}"
        CachingStrategy="RecycleElement"
        BackgroundColor="Transparent"
        ItemsSource="{Binding CoffeeGroups}"
        HasUnevenRows="True"
        IsGroupingEnabled="True"
        GroupDisplayBinding="{Binding Key}"
        SeparatorVisibility="None"
        IsPullToRefreshEnabled="True"
        IsRefreshing="{Binding IsBusy, Mode=OneWay}"
        RefreshCommand="{Binding RefreshCommand}"
        RefreshControlColor="Red">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="model:Coffee">
                <ViewCell>
                    <ViewCell.ContextActions>
                        <MenuItem Text="Favorite" 
                                  Command="{Binding 
                            Source={x:Reference CoffeePage},
                            Path=BindingContex.FavoriteCommand}"
                                  CommandParameter="{Binding .}"/>
                        <MenuItem Text="Delete"/>
                    </ViewCell.ContextActions>
                    <Grid Padding="10">
                        <Frame CornerRadius="20" 
                           HasShadow="True">
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{Binding Image}" WidthRequest="66"/>
                                <StackLayout Padding="10" VerticalOptions="Center">
                                    <Label VerticalOptions="Center" 
                                   FontSize="Large" 
                                   Text="{Binding Name}"/>
                                    <Label VerticalOptions="Center" 
                                   FontSize="Large" 
                                   Text="{Binding Roaster}"/>
                                </StackLayout>
                                <Button Text="Favorite" 
                                        Command="{Binding
                                    Source={RelativeSource
                                    AncestorType={x:Type viewmodels:CoffeeEquipmentViewModel}},
                                    Path=FavoriteCommand}" 
                                        CommandParameter="{Binding .}"/>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.Header>
            <StackLayout>
                <Label Text="Header" TextColor="CornflowerBlue" Background="Gray"/>
            </StackLayout>
        </ListView.Header>
        <ListView.Footer>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Load More" TextColor="CornflowerBlue" Background="Gray"/>
            </StackLayout>
        </ListView.Footer>
    </ListView>
